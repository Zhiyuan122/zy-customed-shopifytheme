<!-- Discount Signup Section -->
<section class="discount-signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-text">
                <h2 class="signup-title">Get Exclusive Deals</h2>
                <p class="signup-subtitle">Subscribe to our newsletter and receive 15% off your first purchase plus early access to new arrivals</p>
            </div>
            
            <div class="signup-form">
                <form class="email-form" id="signup-form">
                    <div class="form-group">
                        <input 
                            type="email" 
                            id="email-input" 
                            class="email-input" 
                            placeholder="Enter your email address"
                            required
                        >
                        <button type="submit" class="signup-btn">Sign up</button>
                    </div>
                    <p class="form-note">We respect your privacy. Unsubscribe at any time.</p>
                </form>
            </div>
        </div>
    </div>
</section>

<style>
.discount-signup {
    padding: 80px 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.signup-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
}

.signup-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
}

.signup-subtitle {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    line-height: 1.6;
}

.signup-form {
    max-width: 500px;
    margin: 0 auto;
}

.email-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.form-group {
    display: flex;
    gap: 10px;
    background: white;
    border-radius: 50px;
    padding: 5px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.email-input {
    flex: 1;
    border: none;
    padding: 15px 20px;
    border-radius: 25px;
    font-size: 1rem;
    outline: none;
}

.email-input::placeholder {
    color: #999;
}

.signup-btn {
    background: #007bff;
    color: white;
    border: none;
    padding: 15px 30px;
    border-radius: 25px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s ease;
}

.signup-btn:hover {
    background: #0056b3;
}

.form-note {
    font-size: 0.9rem;
    opacity: 0.7;
    margin-top: 1rem;
}

@media (max-width: 768px) {
    .signup-title {
        font-size: 2rem;
    }
    
    .form-group {
        flex-direction: column;
        border-radius: 10px;
        padding: 10px;
    }
    
    .email-input,
    .signup-btn {
        border-radius: 5px;
    }
}
</style>

<script>
document.getElementById('signup-form').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const email = document.getElementById('email-input').value;
    
    // Here you would typically send the email to your backend
    console.log('Email submitted:', email);
    
    // Show success message
    alert('Thank you for subscribing! Check your email for your discount code.');
    
    // Clear the form
    document.getElementById('email-input').value = '';
});
</script> 